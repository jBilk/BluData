@model ContatosVirtual.Models.Empresa
@{
    var usuarioLogado = (int)Session["id"];
    Layout = null;
}

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Desativar Empresa!</h5>
        </div>
        <form action="/Empresas/DesativarConcluido" method="post">
            <div class="modal-body">Você deseja mesmo desativar essa empresa?</div>
            <div class="modal-footer">
                <input type="hidden" name="empresa.Id" id="inputId" value="" />
                <input type="hidden" name="empresa.UsuarioEdicaoId" id="usuarioEdicaoIdEmpresa" value="@usuarioLogado"/>
                <input class="btn btn-danger" type="submit" value="Desativar" />
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
            </div>
        </form>
    </div>
</div>