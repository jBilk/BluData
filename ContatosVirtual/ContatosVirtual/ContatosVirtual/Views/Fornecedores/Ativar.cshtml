@model ContatosVirtual.Models.Fornecedor
@{
    var usuarioLogado = (int)Session["id"];
    Layout = null;
}

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Ativar Fornecedor!</h5>
        </div>
        <form action="/Fornecedores/AtivarConcluido" method="post">
            <div class="modal-body">Você deseja mesmo ativar esse fornecedor?</div>
            <div class="modal-footer">
                <input type="hidden" name="fornecedor.Id" id="inputId" value="" />
                <input type="hidden" name="fornecedor.UsuarioEdicaoId" id="usuarioEdicaoIdFornecedor" value="@usuarioLogado" />
                <input class="btn btn-success" type="submit" value="Ativar" />
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
            </div>
        </form>
    </div>
</div>